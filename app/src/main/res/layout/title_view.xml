<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/titleViewActionBack"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="0dp"
        android:padding="@dimen/_20sdp"
        android:rotation="90"
        android:src="@drawable/ic_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/titleViewActionCancel"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="0dp"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/ic_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleViewActionCancel"
        app:layout_constraintStart_toEndOf="@+id/titleViewActionBack"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>