<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bgFaceGuide25"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bgFaceGuide75"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bgFaceGuideVertical35"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <wee.digital.fpa.widget.Rounded
        android:id="@+id/bgFaceRounded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <wee.digital.fpa.widget.Line
        android:id="@+id/bgFaceLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bgFaceAnimGif"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/bgFaceRootFrame"
        app:layout_constraintEnd_toEndOf="@+id/bgFaceRootFrame"
        app:layout_constraintTop_toTopOf="@+id/bgFaceRootFrame"
        app:layout_constraintBottom_toBottomOf="@+id/bgFaceRootFrame"
        android:layout_width="@dimen/_310sdp"
        android:layout_height="@dimen/_310sdp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bgFaceRootFrame"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgFaceGuide25"
        app:layout_constraintBottom_toBottomOf="@+id/bgFaceGuide75">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/bgFaceFrame"
            app:riv_corner_radius="@dimen/_200sdp"
            app:riv_border_width="5dp"
            app:riv_border_color="@color/gray_1"
            app:riv_mutate_background="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_240sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bgFaceTitle"
        app:layout_constraintStart_toStartOf="@+id/bgFaceGuideVertical35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/bg_face_title"
        android:textColor="@color/colorBlack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintStart_toStartOf="@+id/bgFaceGuideVertical35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgFaceTitle"
        android:text="in the center of the circle"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/inter_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bgFaceLogo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@mipmap/facepay"
        android:layout_marginBottom="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>