<resources>

    <!-- TEXT VIEW. -->
    <style name="TextView" parent="WrapContent">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="TextView2" parent="TextView">
        <item name="android:textSize">@dimen/textSize2</item>
    </style>

    <style name="TextView3" parent="TextView">
        <item name="android:textSize">@dimen/textSize3</item>
    </style>

    <style name="TextView4" parent="TextView">
        <item name="android:textSize">@dimen/textSize4</item>
    </style>

    <style name="TextView5" parent="TextView">
        <item name="android:textSize">@dimen/textSize5</item>
    </style>

    <!--BUTTON-->
    <style name="Button" parent="TextView3">
        <item name="android:minWidth">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_34sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:text">Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#747474</item>
    </style>

    <style name="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/drw_btn_primary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--DIALOG-->
    <style name="Dialog" />

    <style name="Dialog.BottomFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minHeight">@dimen/_200sdp</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
    </style>

    <style name="Dialog.Title" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Dialog title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Cửa hàng</item>
    </style>

    <style name="Dialog.TitleIcon">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:tint">@color/colorGray</item>
        <item name="android:padding">@dimen/_14sdp</item>
    </style>

    <!--MESSAGE-->
    <style name="Message" />

    <style name="Message.Icon">
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:layout_marginBottom">@dimen/margin2</item>
    </style>

    <style name="Message.Title" parent="TextView4">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin4</item>
        <item name="android:layout_marginBottom">@dimen/margin2</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Message.Text" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin4</item>
        <item name="android:layout_marginBottom">@dimen/margin5</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <!--SPLASH-->
    <style name="Splash" />

    <!--PAYMENT-->
    <style name="Payment" />

    <style name="Payment.Title" parent="TextView4">
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Payment.Property" parent="TextView2">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:gravity">center</item>
    </style>

    <!--CONNECT-->
    <style name="Connect" />

    <style name="Connect.HelpIcon" parent="TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_15sdp</item>
        <item name="android:background">@drawable/bg_oval_outline</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin2</item>
    </style>

    <style name="Connect.HelpText" parent="TextView2">
        <item name="android:layout_width">0dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--GRADIENT TEXT-->
    <style name="GradientText" parent="TextView5">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--GUIDELINE-->
    <style name="Guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Guideline.ConnectHeader">
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">0.1</item>
    </style>

    <style name="Guideline.MessageDialog">
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">0.4</item>
    </style>
    <style name="Guideline.SplashLogo">
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">0.24</item>
    </style>
</resources>
