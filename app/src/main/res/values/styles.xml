<resources>

    <!-- BASE APPLICATION THEME. -->

    <!-- App Theme. -->
    <style name="App" />

    <style name="App.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="App.Dialog.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="App.Dialog.FullScreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="App.Dialog.FullScreen.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Dialog" />

    <style name="Dialog.BottomFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minHeight">@dimen/_200sdp</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
    </style>

    <style name="Dialog.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Dialog title</item>
    </style>

    <style name="Dialog.Title.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Thông tin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Cửa hàng</item>
    </style>

    <style name="Dialog.Text.Money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Cửa hàng</item>
    </style>

    <style name="Dialog.SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Dialog sub title</item>
    </style>

    <style name="Dialog.TitleIcon">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:src">@drawable/ic_placeholder</item>
    </style>

    <style name="Dialog.ButtonAccept">
        <item name="android:text">Xác nhận</item>
        <item name="android:background">@drawable/drw_gradient_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="android:layout_marginStart">@dimen/defaultMarginX4</item>
        <item name="android:layout_marginEnd">@dimen/defaultMarginX4</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog.ButtonDeny">
        <item name="android:text">Hủy bỏ</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="android:layout_marginStart">@dimen/defaultMarginX4</item>
        <item name="android:layout_marginEnd">@dimen/defaultMarginX4</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Payment" />
    <style name="Payment.TextTime">
        <item name="android:text">Thời gian thanh toán: 01:00</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/defaultMarginX2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Payment.Logo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:src">@mipmap/logo_facepay_white</item>
        <item name="layout_constraintDimensionRatio">@string/logoRatio</item>
    </style>

</resources>
