<resources>

    <!-- TEXT VIEW. -->
    <style name="TextView" parent="WrapContent">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="TextView2" parent="TextView">
        <item name="android:textSize">@dimen/textSize2</item>
    </style>

    <style name="TextView3" parent="TextView">
        <item name="android:textSize">@dimen/textSize3</item>
    </style>

    <style name="TextView4" parent="TextView">
        <item name="android:textSize">@dimen/textSize4</item>
    </style>

    <style name="TextView5" parent="TextView">
        <item name="android:textSize">@dimen/textSize5</item>
    </style>

    <!--DIALOG-->
    <style name="Dialog" />

    <style name="Dialog.BottomFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minHeight">@dimen/_200sdp</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
    </style>

    <style name="Dialog.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Dialog title</item>
    </style>

    <style name="Dialog.Title.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Thông tin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Cửa hàng</item>
    </style>

    <style name="Dialog.Text.Money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drw_dialog_bottom</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Cửa hàng</item>
    </style>

    <style name="Dialog.SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Dialog sub title</item>
    </style>

    <style name="Dialog.TitleIcon">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:src">@drawable/ic_placeholder</item>
    </style>

    <style name="Dialog.ButtonAccept">
        <item name="android:text">Xác nhận</item>
        <item name="android:background">@drawable/drw_gradient_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="android:layout_marginStart">@dimen/margin4</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/margin4</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog.ButtonDeny">
        <item name="android:text">Hủy bỏ</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="android:layout_marginStart">@dimen/margin4</item>
        <item name="android:layout_marginEnd">@dimen/margin4</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--PAYMENT-->
    <style name="Payment" />

    <style name="Payment.TextTime">
        <item name="android:text">Thời gian thanh toán: 01:00</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Payment.Logo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:src">@mipmap/logo_facepay_white</item>
        <item name="layout_constraintDimensionRatio">w,480:103</item>
    </style>

</resources>
