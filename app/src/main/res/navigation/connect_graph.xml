<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connect_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="wee.digital.fpa.ui.screen.SplashFragment"
        android:label="SplashFragment" />
    <fragment
        android:id="@+id/QRFragment"
        android:name="wee.digital.fpa.ui.screen.QRFragment"
        android:label="QRFragment" >
        <action
            android:id="@+id/action_QRFragment_to_InfoDeviceFragment"
            app:destination="@id/InfoDeviceFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popExitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/doneFragment"
        android:name="wee.digital.fpa.ui.screen.DoneFragment"
        android:label="DoneFragment" />
    <fragment
        android:id="@+id/InfoDeviceFragment"
        android:name="wee.digital.fpa.ui.device.InputDeviceFragment" >
        <action
            android:id="@+id/action_InfoDeviceFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_in_down" />
    </fragment>
</navigation>